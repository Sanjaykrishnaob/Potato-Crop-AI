# Environment Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/potato_crop_db
REDIS_URL=redis://localhost:6379/0

# Google Earth Engine
GOOGLE_EE_SERVICE_ACCOUNT_KEY_PATH=config/ee-service-account.json

# Sentinel Hub API (for Sentinel-2 data)
SENTINEL_HUB_CLIENT_ID=your_client_id_here
SENTINEL_HUB_CLIENT_SECRET=your_client_secret_here

# OpenWeatherMap API
OPENWEATHER_API_KEY=your_openweather_api_key_here

# AWS (for data storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=potato-crop-data

# Application Settings
DEBUG=True
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Model Paths
GROWTH_STAGE_MODEL_PATH=models/growth_stage_classifier.pkl
NUTRIENT_MODEL_PATH=models/nutrient_predictor.pkl

# Notification Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
